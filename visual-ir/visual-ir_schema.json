{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Visual IR Schema",
  "description": "PTO-IR Visual IR 规范的 JSON Schema，包含版本、元数据和图结构数组",
  "type": "object",
  "required": ["version", "graphs"],
  "properties": {
    "version": {
      "type": "string",
      "description": "版本号（必需）"
    },
    "metadata": {
      "type": "object",
      "description": "元数据（可选）",
      "required": ["entry_id"],
      "properties": {
        "entry_id": {
          "type": "string",
          "description": "打开的第一张图的id，顶层图（必需）"
        },
        "name": {
          "type": "string",
          "description": "名称（可选），目前使用program的名称"
        },
        "description": {
          "type": "string",
          "description": "描述（可选）"
        }
      },
      "additionalProperties": true
    },
    "graphs": {
      "type": "array",
      "description": "图数组（必需）",
      "items": {
        "type": "object",
        "description": "图结构",
        "required": ["id", "nodes", "edges"],
        "properties": {
          "id": {
            "type": "string",
            "description": "图的唯一标识（必需），目前使用 function name"
          },
          "nodes": {
            "type": "array",
            "description": "节点数组（必需）",
            "items": {
              "type": "object",
              "required": ["id", "name", "role"],
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "节点ID（必需）"
                },
                "name": {
                  "type": "string",
                  "description": "节点名称（必需）"
                },
                "role": {
                  "type": "string",
                  "enum": ["DATA", "OP", "INCAST", "OUTCAST", "DEFAULT"],
                  "description": "节点角色（必需），function的输入参数对应INCAST，function的返回输出为OUTCAST"
                },
                "attributes": {
                  "type": "object",
                  "description": "用户希望显示的节点属性（可选），支持自定义扩展",
                  "additionalProperties": true
                },
                "details": {
                  "type": "object",
                  "description": "详细的节点属性（可选），支持自定义扩展",
                  "properties": {
                    "data_kind": {
                      "type": "string",
                      "enum": ["tensor", "scalar", "tile", "others"],
                      "description": "数据节点数据种类（可选）"
                    },
                    "data_type": {
                      "type": "string",
                      "description": "数据节点数据类型（可选），如 float16, int8 等"
                    },
                    "layout": {
                      "type": "string",
                      "description": "数据节点数据格式/布局（可选），如 NZ, ND, FRACTAL_Z 等"
                    },
                    "shape": {
                      "type": "array",
                      "description": "数据节点数据形状数组（可选）",
                      "items": {
                        "oneOf": [
                          {"type": "number"},
                          {"type": "string", "description": "scalar符号表达式，如 %d, %batch 等"},
                          {"type": "null"}
                        ]
                      }
                    },
                    "inputs": {
                      "type": "array",
                      "description": "节点的所有输入的id数组（可选）",
                      "items": {
                        "type": "integer"
                      }
                    },
                    "outputs": {
                      "type": "array",
                      "description": "节点的所有输出的id数组（可选）",
                      "items": {
                        "type": "integer"
                      }
                    },
                    "span_file": {
                      "type": "string",
                      "description": "节点对应的源代码文件位置（可选）"
                    },
                    "span_line": {
                      "type": "integer",
                      "description": "节点对应的源代码开始行数（可选）"
                    },
                    "subgraph_id": {
                      "type": "integer",
                      "description": "操作节点对应的子图ID（可选）"
                    }
                  },
                  "additionalProperties": true
                }
              },
              "additionalProperties": false
            }
          },
          "edges": {
            "type": "array",
            "description": "边数组（必需）",
            "items": {
              "type": "object",
              "required": ["id", "source_id", "target_id"],
              "properties": {
                "id": {
                  "type": "integer",
                  "description": "边ID（必需）"
                },
                "source_id": {
                  "type": "integer",
                  "description": "源节点ID（必需）"
                },
                "target_id": {
                  "type": "integer",
                  "description": "目标节点ID（必需）"
                },
                "attributes": {
                  "type": "object",
                  "description": "用户希望显示的边属性（可选），支持自定义扩展",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "边名称（可选）"
                    }
                  },
                  "additionalProperties": true
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}